{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}

{% block body %}
    <div class="container mt-5">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata, 'security') }} <!--ICI on affiche un message d'erreur court et traduit en fr-->
            </div>
        {% endif %}
        <form action="{{ path('login') }}" class="form-group w-75" method="post">
            <div>
                <label for="username">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
            </div>

            <div>
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary mt-2">Se connecter</button>
        </form>
    </div>
{% endblock %}