{% extends 'base.html.twig' %}
{% block title 'Toutes les annonces Immo-59' %}

{% block body %}
<div class="container mt-4">

    <h1>Toutes les annonces Immo-59</h1>
    <div class="container">
        {{ form_start(form) }}
        <div class="form-row">
            <div class="col">
                {{ form_row(form.minSurface) }}
            </div>
            <div class="col">
                {{ form_row(form.maxPrice) }}
            </div>
            <div class="col">
                <button class="btn btn-primary">Rechercher</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="row">
        {% for property in properties %}
        <div class="col-md-4">
            {% include 'property/_property.html.twig' %}
        </div>
    {% endfor %}
    </div>
    <div>
        {{ knp_pagination_render(properties) }}
    </div>
</div>

{% endblock %}